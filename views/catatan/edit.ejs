<!doctype html>
<html lang="ar">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/stylesheets/style.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" integrity="sha384-dpuaG1suU0eT09tx5plTaGMLBsfDLzUCCUXOY2j/LSvXYuG6Bqs43ALlhIqAJVRb" crossorigin="anonymous">
        <title>Catatan</title>
    </head>
    <body>
        <div class="row">
          <div class="col">
            <a href="/catatan" class="btn btn-sm btn-info mt-3">Kembali</a>
              
            <form action="/catatan/update/<%= id_catatan %>" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="nama" class="form-label">Nama</label>
                    <input type="text" class="form-control" name="nama_catatan" value="<%= nama_catatan %>" required>
                    <label for="keterangan" class="form-label">Keterangan</label>
                    <input type="text" class="form-control" name="keterangan_catatan" value="<%= keterangan_catatan %>" required>
                    <label for="foto_catatan" class="form-label">Foto catatan</label>
                    <% if (messages.wrongExt) { %>
                        <p class="text-danger"><%= messages.wrongExt %></p>
                    <% } %>
                    <input type="file" class="form-control" name="foto_catatan">
                    <% if (foto_catatan) { %>
                        <img src="/images/<%= foto_catatan %>" alt="" class="my-2">
                    <% } %>
                    <label for="id_jenis" class="form-label">Jenis</label>
                    <select name="id_jenis" class="form-control">
                        <% for(let i = 0; i < data.length; i++) { %>
                            <option value="<%= data[i].id_jenis %>"><%= data[i].nama_jenis %></option>
                        <% } %>
                    </select>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-sm btn-success">Save</button>
                </div>
            </form>
          </div>
        </div>
    </body>
</html>
