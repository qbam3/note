<!doctype html>
<html lang="ar">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" integrity="sha384-dpuaG1suU0eT09tx5plTaGMLBsfDLzUCCUXOY2j/LSvXYuG6Bqs43ALlhIqAJVRb" crossorigin="anonymous">

    <title>catatan</title>
  </head>
  <body>
    <h1 class="text-center">CATATAN</h1>
    <div class="container">
      <% if (messages.success) { %>
        <div class="alert alert-info" role="alert">
          <%- messages.success %>
        </div>
      <% } %>  
      <div class="row">
        <div class="col">
            <a href="/catatan/create" class="btn btn-sm btn-success">Tambah</a>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Nama</th>
                  <th scope="col">Keterangan</th>
                  <th scope="col">Foto</th>
                  <th scope="col">Jenis</th>
                  <th colspan="2" scope="col">Aksi</th>
                </tr>
              </thead>
              <tbody>
                  <% for(var i=0; i < data.length; i++){ %>
                      <tr>
                          <th scope="row"><%= (i+1) %></th>
                          <td><%= data[i].nama_catatan %></td>
                          <td><%= data[i].keterangan_catatan %></td>
                          <td><img src="/images/<%= data[i].foto_catatan %>" alt="" class="size" ></td>
                          <td><%= data[i].jenis_catatan %></td>
                          <td>
                              <a href="/catatan/edit/<%= data[i].id_catatan %>" class="btn btn-sm btn-warning">Edit</a>
                              <a href="/catatan/delete/<%= data[i].id_catatan %>" class="btn btn-sm btn-danger">Hapus</a>
                          </td>
                      </tr>
                  <% } %>
              </tbody>
            </table>
        </div>
      </div>
    </div>
  </body>
</html>
